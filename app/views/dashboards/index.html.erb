<div class="color-container">
  <div class="container">
    <div class="row">
      <div class="navbar navbar-default">
        <ul>
          <% if current_user %>
            <li>Signed in as <%= current_user.username %>!</li>
            <li class="btn btn-primary navbar-btn"><%= link_to "Home", root_path %></li>
            <li class="btn btn-info navbar-btn"><%= link_to "My Dashboard", user_path %></li>
            <li class="btn btn-danger navbar-btn"><%= link_to "Sign out", signout_path %></li>
          <% else %>
            <li class="btn btn-primary navbar-btn"><%= link_to "Sign In With Github", "/auth/github" %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-lg-12 test-center v-center">
      <div class="row">
        <h1>Don't just Github. Visualize Github!</h1>
        <br>
      </div>
    </div>
  </div>
</div>
