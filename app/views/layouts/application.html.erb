<!DOCTYPE html>
<html>
<head>
  <title>GitDashboard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://code.highcharts.com/highcharts.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="color-container">
    <div class="container">
      <div class="row">
        <div class="navbar navbar-default">
          <ul>
            <% if current_user %>
              <li>Signed in as <%= current_user.username %>!</li>
              <li class="btn btn-primary navbar-btn"><%= link_to "Home", root_path %></li>
              <li class="btn btn-info navbar-btn"><%= link_to "My Dashboard", user_path %></li>
              <li class="btn btn-danger navbar-btn"><%= link_to "Sign out", signout_path %></li>
            <% else %>
              <li class="btn btn-primary navbar-btn"><%= link_to "Sign In With Github", "/auth/github" %></li>
            <% end %>
          </ul>
        </div>
      </div>

<%= yield %>

    </div>
  </div>
</body>
</html>
